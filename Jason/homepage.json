{
    "$jason": {
        "head": {
            "title": "My Homepage",
            "description": "The page that is really considered home...",
            "styles": {
                "@": "https://json.trufitportal.com/Jason/common_styles.json"
            },
            "actions": {
                "$pull": {
                    "type": "$reload"
                },
                "$load": {
                    "trigger": "fetch"
                },
                "worked": {
                    "type": "$util.banner",
                    "options": {
                        "title": "Proccesed",
                        "description": "Your request has been completed",
                        "type": "success"
                    },
                    "success": {
                        "trigger": "fetch"
                    }
                },
                "fetch": {
                    "type": "$network.request",
                    "options": {
                        "url": "https://www.trufitportal.com/{{$global.studio.key}}/api/get_reservations.json?token={{$global.user.token}}"
                    },
                    "success": {
                        "type": "$render"
                    }
                },
                "start_trial": {
                    "type": "$network.request",
                    "options": {
                        "url": "https://www.trufitportal.com/{{$global.studio.key}}/api/start_trial.json?token={{$global.user.token}}"
                    },
                    "success": {
                        "type": "$reload"
                    }
                }
            },
            "templates": {
                "body": {
                    "background": "#333333",
                    "style": {
                        "border": "none"
                    },
                    "header": {
                        "title": "Home",
                        "style": {
                            "background": "#222222",
                            "color": "#ffffff"
                        },
                        "menu": {
                            "image": "https://json.trufitportal.com/images/bars-solid.png",
                            "style": {
                                "color": "#ffffff"
                            },
                            "href": {
                                "url": "https://json.trufitportal.com/Jason/user_settings.json",
                                "transition": "modal"
                            }
                        }
                    },
                    "footer": {
                        "@": "https://json.trufitportal.com/Jason/footer.json"
                    },
                    "sections": [{
                            "items": [{
                                "type": "label",
                                "text": "Announcements",
                                "class": "label_header"
                            }]
                        },
                        {
                            "items": {
                                "{{#each $jason.announcements}}": {
                                    "type": "vertical",
                                    "components": [{
                                            "type": "label",
                                            "text": "{{title}}",
                                            "class": "row_bold"
                                        },
                                        {
                                            "type": "label",
                                            "text": "{{annoucement}}",
                                            "class": "row_normal"
                                        }
                                    ]
                                }
                            }
                        },
                        {
                            "items": [{
                                "type": "label",
                                "text": "Upcoming Classes",
                                "class": "label_header"
                            }]
                        },
                        {
                            "items": {
                                "{{#each $jason.reservations}}": {
                                    "type": "horizontal",
                                    "style": {
                                        "distribution": "equalsize",
                                        "align": "center",
                                        "spacing": "25"
                                    },
                                    "components": [{
                                            "type": "vertical",
                                            "components": [{
                                                    "type": "label",
                                                    "text": "{{date}}",
                                                    "class": "row_normal"
                                                },
                                                {
                                                    "type": "label",
                                                    "text": "{{class_type}}",
                                                    "class": "row_bold"
                                                },
                                                {
                                                    "type": "label",
                                                    "text": "{{time}}",
                                                    "class": "row_normal"
                                                },
                                                {
                                                    "type": "label",
                                                    "text": "{{type}}",
                                                    "class": [{
                                                            "{{#if (type == 'Waitlist')}}": "status_pending"
                                                        },
                                                        {
                                                            "{{#else}}": "status_confirmed"
                                                        }
                                                    ]
                                                }
                                            ]
                                        },
                                        [{
                                            "{{#if (link != '')}}": {
                                                "type": "button",
                                                "text": "cancel",
                                                "class": "cancel_btn btn_row",
                                                "action": {
                                                    "type": "$util.alert",
                                                    "options": {
                                                        "title": "Unregister",
                                                        "success": "Yes",
                                                        "cancel": "No",
                                                        "description": "Are you sure you want to cancel your booking for this class?"
                                                    },
                                                    "success": {
                                                        "type": "$network.request",
                                                        "options": {
                                                            "url": "{{link}}"
                                                        },
                                                        "success": {
                                                            "trigger": "worked"
                                                        }
                                                    }
                                                }
                                            }
                                        }]
                                    ]
                                }
                            }
                        },
                        {
                            "items": [{
                                    "type": "label",
                                    "text": "Status",
                                    "class": "label_header"
                                },
                                {
                                    "type": "vertical",
                                    "components": [{
                                            "type": "label",
                                            "class": "row_normal",
                                            "text": "{{$jason.user_status.description}}"
                                        },
                                        {
                                            "type": "space",
                                            "style": {
                                                "height": "15"
                                            }
                                        },
                                        {
                                            "type": "label",
                                            "class": "row_bold",
                                            "text": "{{$jason.user_status.status}}"
                                        },
                                        {
                                            "type": "space",
                                            "style": {
                                                "height": "15"
                                            }
                                        },
                                        [{
                                            "{{#if $jason.user_status.start_trial == 'Yes'}}": {
                                                "type": "button",
                                                "text": "Start Trial",
                                                "class": "button_ok btn_row",
                                                "action": {
                                                    "trigger": "start_trial"
                                                }
                                            }
                                        }]
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}
