{
  "$jason": {
    "head": {
      "title": "Book IT",
      "styles": {
          "@": "https://json.trufitportal.com/Jason/common_styles.json"
      },
      "actions": {
        "$load": {
          "trigger": "fetch"
        },
        "fetch": {
          "type": "$network.request",
          "options": {
            "url": "https://www.trufitportal.com/{{$global.studio.key}}/api/book_class.json?clsID={{$params.clsID}}&date={{$params.date}}&token={{$global.user.token}}"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "title": "Confirm selection",
            "style": {
              "theme": "dark"
            }
          },
          "sections": [
            {
              "items": [
                {
                  "type": "vertical",
                  "style": {
                    "align": "center"
                  },
                  "components": [
                    {
                      "type": "label",
                      "class": "row_normal",
                      "text": "{{$jason.content.class_date}}"
                    },
                    {
                      "type": "label",
                      "class": "row_bold",
                      "text": "{{$jason.content.class_time + ' ' + $jason.content.class_type}}"
                    },
                    {
                      "type": "label",
                      "class": "row_normal",
                      "text": "Booking option"
                    }
                  ]
                }
              ]
            },
            {
              "items": {
                "{{#each $jason.content.options}}": {
                  "type": "vertical",
                  "style": {
                    "align": "center"
                  },
                  "components": [
                    {
                      "type": "label",
                      "class": "row_normal",
                      "text": "{{type}}"
                    },
                    {
                      "type": "label",
                      "class": "row_bold",
                      "text": "{{description}}"
                    },
                    {
                      "type": "space",
                      "style": {
                        "height": "60"
                      }
                    },
                    [
                      {
                        "{{#if (type == 'Drop in')}}": {
                          "type": "button",
                          "class": "btn_main button_ok",
                          "text": "Pay fee",
                          "action": {
                            "type": "$href",
                            "options": {
                              "url": "https://json.trufitportal.com/Jason/checkout.json",
                              "options": {
                                "item": "{{description}}",
                                "price": "{{price_formatted}}",
                                "date": "{{$params.date}}",
                                "type": "dropin",
                                "clsID": "{{$params.clsID}}"
                              }
                            }
                          }
                        }
                      },
                      {
                        "{{#else}}": {
                          "type": "button",
                          "text": "Book",
                          "class": "btn_main button_ok",
                          "action": {
                            "type": "$network.request",
                            "options": {
                              "url": "{{button}}"
                            },
                            "success": {
                              "type": "$back"
                            }
                          }
                        }
                      }
                    ]
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}
