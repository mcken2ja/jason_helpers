{
    "$jason": {
        "head": {
            "title": "starter",
            "actions": {
                "$load": {
                    "type": "$render"
                },
                "sign_in": {
                    "type": "$href",
                    "options": {
                        "url": "https://json.trufitportal.com/Jason/new_login.json"
                    }
                },
                "sign_up": {
                    "type": "$href",
                    "options": {
                        "url": "https://json.trufitportal.com/Jason/registration.json"
                    }
                }
            },
            "styles": {
                "sign_up": {
                    "width": "80%",
                    "align": "center",
                    "height": "60",
                    "font": "ArialMT",
                    "border_width": "1",
                    "border_color": "#a9a9a9",
                    "background": "#ffffff",
                    "color": "#000000",
                    "corner_radius": "25",
                    "size": "18"
                },
                "sign_in": {
                    "width": "80%",
                    "align": "center",
                    "height": "60",
                    "font": "ArialMT Bold",
                    "border_width": "1",
                    "border_color": "#a9a9a9",
                    "background": "#2377d9",
                    "color": "#ffffff",
                    "corner_radius": "25",
                    "size": "18"
                }
            },
            "templates": {
                "body": {
                    "background": "https://json.trufitportal.com/images/background1.jpg",
                    "style": {
                        "border": "none"
                    },
                    "sections": [
                        {
                            "items": [
                                {
                                    "type": "vertical",
                                    "components": [
                                        {
                                            "type": "space",
                                            "style": {
                                                "height": "45%"
                                            }
                                        },
                                        {
                                            "type": "button",
                                            "text": "Sign In",
                                            "class": "sign_in",
                                            "action": {
                                                "trigger": "sign_in"
                                            }
                                        },
                                        {
                                            "type": "space",
                                            "style": {
                                                "height": "25"
                                            }
                                        },
                                        {
                                            "type": "button",
                                            "text": "New Here? Sign Up",
                                            "class": "sign_up",
                                            "action": {
                                                "trigger": "sign_up"
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}
