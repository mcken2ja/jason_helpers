{
    "$jason": {
        "head": {
            "title": "starter",
            "actions": {
                "$load": {
                    "type": "$render"
                },
                "sign_in": {
                    "type": "$href",
                    "options": {
                        "url": "https://json.trufitportal.com/Jason/validate_email.json",
                        "transition": "push"
                    }
                },
                "sign_up": {
                    "type": "$href",
                    "options": {
                        "url": "https://json.trufitportal.com/Jason/registration.json",
                        "transition": "push"
                    }
                }
            },
            "styles": {
                "@": "https://json.trufitportal.com/Jason/common_styles.json"
            },
            "templates": {
                "body": {
                    "background": "https://json.trufitportal.com/images/background1.jpg",
                    "style": {
                        "border": "none"
                    },
                    "sections": [
                        {
                            "items": [
                                {
                                    "type": "vertical",
                                    "style": {
                                        "align": "center"
                                    },
                                    "components": [
                                        {
                                            "type": "space",
                                            "style": {
                                                "height": "45%"
                                            }
                                        },
                                        {
                                            "type": "button",
                                            "text": "Sign In",
                                            "class": "button_default",
                                            "action": {
                                                "trigger": "sign_in"
                                            }
                                        },
                                        {
                                            "type": "space",
                                            "style": {
                                                "height": "25"
                                            }
                                        },
                                        {
                                            "type": "button",
                                            "text": "New Here? Sign Up",
                                            "class": "button_default",
                                            "action": {
                                                "trigger": "sign_up"
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}
