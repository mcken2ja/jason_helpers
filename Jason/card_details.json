{
    "$jason": {
        "head": {
            "title": "Card Info",
            "actions": {
                "$load": {
                    "type": "$render"
                },
                "remove_card": {
                    "type": "$util.alert",
                    "options": {
                        "title": "Confirm",
                        "description": "Are you sure you want to delete this card?",
                        "success": "Delete",
                        "cancel": "Cancel"
                    },
                    "success": {
                        "type": "$network.request",
                        "options": {
                            "url": "https://www.trufitportal.com/{{$global.studio.key}}/api/remove_card.json?pmID={{$params.id}}"
                        },
                        "success": {
                            "type": "$back"
                        }
                    }
                },
                "is_default": {
                    "type": "$util.popup",
                    "options": {
                        "title": "Hold up",
                        "description": "You cannot delete the default card",
                        "text": "OK"
                    }
                }
            },
            "templates": {
                "body": {
                    "background": "#333333",
                    "header": {
                        "title": "Card Info",
                        "style": {
                            "background": "#222222",
                            "color": "#ffffff"
                        },
                        "menu": {
                            "image": "https://json.trufitportal.com/images/trash-alt.png",
                            "style": {
                                "color": "#ffffff"
                            },
                            "action": {
                                "trigger": [
                                    {
                                        "{{#if $params.defaultCard}}": "is_default"
                                    },
                                    {
                                        "{{#else}}": "remove_card"
                                    }
                                ]
                            }
                        }
                    },
                    "sections": [
                        {
                            "items": [{
                                "type": "vertical",
                                "components": [{
                                    "type": "label",
                                    "style": {
                                        "font": "FontAwesome",
                                        "background": "#ffffff",
                                        "align": "left",
                                        "size": "20",
                                        "padding": "15",
                                        "color": "#000000"
                                    },
                                    "text": [
                                        {
                                            "{{#if $params.brand == 'Discover'}}": " Discover"
                                        },
                                        {
                                            "{{#elseif $params.brand == 'American Express'}}": " AMEX"
                                        },
                                        {
                                            "{{#elseif $params.brand === 'Visa'}}": " Visa"
                                        },
                                        {
                                            "{{#else}}": " {{$params.brand}}"
                                        }
                                    ]
                                    },
                                    {
                                        "type": "label",
                                        "style": {
                                            "background": "#ffffff",
                                            "align": "left",
                                            "size": "20",
                                            "padding": "15",
                                            "color": "#000000"
                                        },
                                        "text": "{{$params.number}}"
                                        },
                                    {
                                        "type": "label",
                                        "style": {
                                            "background": "#ffffff",
                                            "align": "left",
                                            "size": "20",
                                            "padding": "15",
                                            "color": "#000000"
                                        },
                                        "text": "{{$params.exp}}"
                                    }
                                ]
                                }]
                        }
                    ]
                }
            }
        }
    }
}
