{
    "$jason": {
        "head": {
            "title": "Payment cards",
            "actions": {
                "$load": {
                    "trigger": "get_cards"
                },
                "show_data": {
                    "type": "$util.popup",
                    "options": {
                        "title": "Data",
                        "description": "{{$jason.cards}}",
                        "text": "Got it"
                    }
                },
                "$pull": {
                    "trigger": "show_data"
                },
                "get_cards": {
                    "type": "$network.request",
                    "options": {
                        "url": "https://www.trufitportal.com/demo/api/get_payment_cards.json",
                        "data_type": "json"
                    },
                    "success": {
                        "type": "$render"
                    },
                    "error": {
                        "type": "$util.banner",
                        "options": {
                            "title": "Uh Oh",
                            "description": "Something went wrong",
                            "type": "error"
                        }
                    }
                }
            },
            "templates": {
                "body": {
                    "background": "#333333",
                    "header": {
                        "title": "Payment Cards",
                        "style": {
                            "background": "#222222",
                            "color": "#ffffff"
                        },
                        "sections": [{
                                "items": {
                                    "{{#each $jason.data.cards}}": {
                                        "type": "vertical",
                                        "components": [{
                                            "type": "horizontal",
                                            "components": [{
                                                    "type": "label",
                                                    "class": "std_label",
                                                    "text": "{{brand}}"
                                                },
                                                {
                                                    "type": "label",
                                                    "class": "std_label",
                                                    "text": "{{card_num}}"
                                                },
                                                {
                                                    "type": "label",
                                                    "class": "std_label",
                                                    "text": "{{expiration}}"
                                                },
                                                {
                                                    "type": "label",
                                                    "class": "std_label",
                                                    "text": "{{defaultCard}}"
                                                }
                                            ]
                                        }]
                                    }

                                }
                                },{
                                    "items": [{
                                        "type": "button",
                                        "text": "Add new card",
                                        "class": "button_default"
                                        }]
                                    }]
                        }
                    }
                }

            }
        }
    }
