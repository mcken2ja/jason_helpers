{
    "$jason": {
        "head": {
            "title": "Payment cards",
            "actions": {
                "$load": {
                    "trigger": "get_cards"
                },
                "get_cards": {
                    "type": "$network.request",
                    "options": {
                        "url": "https://www.trufitportal.com/demo/api/get_payment_cards.json"
                    },
                    "success": {
                        "type": "$render"
                    }
                }
            },
            "templates": {
                "body": {
                    "background": "#333333",
                    "header": {
                        "title": "Payment Cards",
                        "style": {
                            "background": "#222222",
                            "color": "#ffffff"
                        },
                        "sections": [{
                                "items": {
                                    "{{#each $jason.cards}}": {
                                        "type": "vertical",
                                        "components": [{
                                            "type": "horizontal",
                                            "components": [{
                                                    "type": "label",
                                                    "class": "std_label",
                                                    "text": "{{brand}}"
                                                },
                                                {
                                                    "type": "label",
                                                    "class": "std_label",
                                                    "text": "{{card_num}}"
                                                },
                                                {
                                                    "type": "label",
                                                    "class": "std_label",
                                                    "text": "{{expiration}}"
                                                },
                                                {
                                                    "type": "label",
                                                    "class": "std_label",
                                                    "text": "{{defaultCard}}"
                                                }
                                            ]
                                        }]
                                    }

                                }
                                }]
                        }
                    }
                }

            }
        }
    }
