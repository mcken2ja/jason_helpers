{
    "$jason": {
        "head": {
            "title": "Payment cards",
            "styles": {
                "@": "https://json.trufitportal.com/Jason/common_styles.json"
            },
            "actions": {
                "$load": {
                    "type": "$render"
                },
                "show_data": {
                    "type": "$util.popup",
                    "options": {
                        "title": "Data",
                        "description": "{{cards}}",
                        "text": "Got it"
                    }
                },
                "$pull": {
                    "trigger": "show_data"
                },
                "get_cards": {
                    "type": "$network.request",
                    "options": {
                        "url": "https://www.trufitportal.com/demo/api/get_payment_cards.json",
                        "data_type": "json"
                    },
                    "success": {
                        "type": "$render"
                    },
                    "error": {
                        "type": "$util.banner",
                        "options": {
                            "title": "Uh Oh",
                            "description": "Something went wrong",
                            "type": "error"
                        }
                    }
                }
            },
            "templates": {
                "body": {
                    "background": "#333333",
                    "header": {
                        "title": "Payment Cards",
                        "style": {
                            "background": "#222222",
                            "color": "#ffffff"
                        },
                        "sections": [{
                                "items": {
                                    "{{#each cards}}": {
                                        "type": "vertical",
                                        "components": [{
                                            "type": "horizontal",
                                            "components": [{
                                                    "type": "label",
                                                    "class": "std_label",
                                                    "text": "{{brand}}"
                                                },
                                                {
                                                    "type": "label",
                                                    "class": "std_label",
                                                    "text": "{{card_num}}"
                                                },
                                                {
                                                    "type": "label",
                                                    "class": "std_label",
                                                    "text": "{{expiration}}"
                                                },
                                                {
                                                    "type": "label",
                                                    "class": "std_label",
                                                    "text": "{{defaultCard}}"
                                                }
                                            ]
                                        }]
                                    }

                                }
                                },{
                                    "items": [{
                                        "type": "button",
                                        "text": "Add new card",
                                        "class": "button_default"
                                        }]
                                    }]
                        }
                    }
                },
                "data": {
                    "cards": [
       {
           "brand": "Discover",
           "card_num": "XXXX0012",
           "card_id": 60,
           "defaultCard": false,
           "expiration": "2028-02"
       },
       {
           "brand": "Visa",
           "card_num": "4242",
           "card_id": 70,
           "defaultCard": true,
           "expiration": "4/2029"
       },
       {
           "brand": "American Express",
           "card_num": "8431",
           "card_id": 72,
           "defaultCard": false,
           "expiration": "10/2020"
       },
       {
           "brand": "Visa",
           "card_num": "4242",
           "card_id": 73,
           "defaultCard": false,
           "expiration": "4/2024"
       },
       {
           "brand": "Visa",
           "card_num": "4242",
           "card_id": 74,
           "defaultCard": false,
           "expiration": "10/2022"
       }
   ]
                }

            }
        }
    }
