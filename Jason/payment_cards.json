{
    "$jason": {
        "head": {
            "title": "Payment cards",
            "styles": {
                "@": "https://json.trufitportal.com/Jason/common_styles.json"
            },
            "actions": {
                "$load": {
                    "trigger": "get_cards"
                },
                "show_data": {
                    "type": "$util.popup",
                    "options": {
                        "title": "Data",
                        "description": "version 3",
                        "text": "Got it"
                    }
                },
                "$pull": {
                    "trigger": "show_data"
                },
                "get_cards": {
                    "type": "$network.request",
                    "options": {
                        "url": "https://www.trufitportal.com/demo/api/get_payment_cards.json",
                        "data_type": "json"
                    },
                    "success": {
                        "type": "$render"
                    },
                    "error": {
                        "type": "$util.banner",
                        "options": {
                            "title": "Uh Oh",
                            "description": "Something went wrong",
                            "type": "error"
                        }
                    }
                }
            },
            "templates": {
                "body": {
                    "background": "#333333",
                    "header": {
                        "title": "Payment Cards",
                        "style": {
                            "background": "#222222",
                            "color": "#ffffff"
                        }
                    },
                    "sections": [{
                        "items": [{
                                "type": "vertical",
                                "style": {
                                  "padding": "15",
                                  "spacing": "10"
                                },
                                "components": {
                                    "{{#each $jason.cards}}": {
                                        "type": "horizontal",
                                        "components": [{
                                                "type": "label",
                                                "class": "row_bold",
                                                "text": "{{brand}}"
                                            },
                                            {
                                                "type": "label",
                                                "class": "row_bold",
                                                "text": "{{card_num}}"
                                            },
                                            {
                                                "type": "label",
                                                "class": "row_bold",
                                                "text": "{{expiration}}"
                                            },
                                            {
                                                "type": "label",
                                                "class": "row_bold",
                                                "text": "{{defaultCard}}"
                                            }
                                        ]
                                    }
                                }
                            },
                            {
                                "type": "button",
                                "text": "Add new card",
                                "class": "button_default"
                            }
                        ]
                    }]
                }
            }
        }
    }
}
