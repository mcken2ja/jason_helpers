{
  "$jason": {
    "head": {
      "title": "Check-in Classes",
      "description": "Shows the classes going on today",
      "actions": {
        "$pull": {
          "type": "$reload"
        },
        "$load": {
          "type": "$idle.disable",
          "success": {
            "trigger": "fetch"
          }
        },
        "fetch": {
          "type": "$network.request",
          "options": {
            "url": "https://www.trufitportal.com/{{$global.location_key}}/api/checkin_classes.json"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "styles": {
        "title": {
          "size": "25",
          "font": "HelveticaNeue-Bold"
        },
        "input_class": {
          "font": "HelveticaNeue",
          "size": "18"
        },
        "btn_add_class": {
          "align": "center",
          "height": "60",
          "font": "HelveticaNeue-Bold",
          "border_width": "1",
          "background": "#ffffff",
          "color": "#2377d9",
          "corner_radius": "5",
          "size": "18"
        },
        "btn_ready_class": {
          "align": "center",
          "height": "60",
          "font": "HelveticaNeue-Bold",
          "border_width": "1",
          "background": "#2377d9",
          "color": "#ffffff",
          "corner_radius": "5",
          "size": "18"
        },
        "btn_done_class": {
          "align": "center",
          "height": "60",
          "font": "HelveticaNeue-Bold",
          "border_width": "1",
          "background": "#dee3ea",
          "color": "#000000",
          "corner_radius": "5",
          "size": "18"
        }
      },
      "templates": {
        "body": {
          "header": {
            "style": {
              "theme": "dark"
            },
            "menu": {
              "text": "Logout",
              "action": {
                "type": "$global.reset",
                "options": {
                  "items": [
                    "token"
                  ]
                },
                "success": {
                  "type": "$href",
                  "options": {
                    "url": "https://json.trufitportal.com/Jason/login.json",
                    "transition": "replace",
                    "preload": {
                      "@": "file://preload.json"
                    }
                  }
                }
              }
            }
          },
          "sections": [
            {
              "items": [
                {
                  "type": "vertical",
                  "style": {
                    "align": "center"
                  },
                  "components": [
                    {
                      "type": "image",
                      "url": "https://json.trufitportal.com/images/TruFit-Logo.png",
                      "style": {
                        "width": "62%"
                      }
                    }
                  ]
                },
                {
                  "type": "vertical",
                  "components": [
                    {
                      "type": "label",
                      "class": "title",
                      "text": "{{$jason.pretty_date}}"
                    },
                    {
                      "type": "space",
                      "style": {
                        "height": "40"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "items": {
                "{{#each $jason.classes}}": {
                  "type": "label",
                  "text": "{{time}}\n{{class_type}}",
                  "class": "input_class",
                  "href": {
                    "url": "https://json.trufitportal.com/Jason/check_page.json",
                    "transition": "push",
                    "options": {
                      "clsID": "{{clsID}}",
                      "date": "{{date}}"
                    },
                    "preload": {
                      "@": "file://preload.json"
                    }
                  }
                }
              }
            }
          ]
        }
      }
    }
  }
}
