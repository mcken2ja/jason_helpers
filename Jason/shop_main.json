{
  "$jason": {
    "head": {
      "title": "Shop Main",
      "description": "",
      "styles": {
        "row_bold": {
          "size": "15",
          "font": "HelveticaNeue-Bold"
        },
        "row_normal": {
          "size": "15"
        },
        "button_ok": {
          "background": "#2377d9"
        },
        "button_wl": {
          "background": "#2377d9"
        },
        "button_def": {
          "background": "#dee3ea"
        },
        "cancel_btn": {
          "background": "#ce0208"
        },
        "btn_main": {
          "width": "50%",
          "align": "center",
          "height": "40",
          "font": "ArialMT",
          "border_width": "1",
          "border_color": "#a9a9a9",
          "color": "#ffffff",
          "corner_radius": "5",
          "size": "14"
        },
        "label_header": {
          "size": "25",
          "font": "HelveticaNeue-Bold",
          "background": "#2377d9",
          "color": "#ffffff",
          "align": "center"
        }
      },
      "actions": {
        "$pull": {
          "type": "$reload"
        },
        "$load": {
          "trigger": "fetch"
        },
        "fetch": {
          "type": "$network.request",
          "options": {
            "url": "https://www.trufitportal.com/{{$global.location_key}}/api/shop_items.json?token={{$global.token}}"
          },
          "success": {
            "type": "$render"
          }
        },
        "agree": {
          "type": "$util.alert",
          "options": {
            "title": "Membership agreement",
            "description": "{{$jason.selected_agreement}}",
            "success": "I Agree",
            "cancel": "I Decline"
          },
          "success": {
            "trigger": "checkout"
          }
        },
        "checkout": {
          "type": "$href",
          "options": {
            "url": "https://json.trufitportal.com/Jason/checkout.json",
            "options": {
              "item": "{{$get.selected_item}}",
              "price": "{{$get.selected_price}}",
              "type": "{{$get.selected_type}}",
              "id": "{{$get.selected_id}}"
            }
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "title": "Shop",
            "style": {
              "theme": "dark"
            }
          },
          "footer": {
            "@": "https://json.trufitportal.com/Jason/footer.json"
          },
          "sections": [
            {
              "items": [
                {
                  "type": "label",
                  "class": "label_header",
                  "text": "Memberships"
                }
              ]
            },
            {
              "items": {
                "{{#each $jason.memberships}}": {
                  "type": "horizontal",
                  "style": {
                    "distribution": "equalsize",
                    "align": "center",
                    "spacing": "15"
                  },
                  "components": [
                    {
                      "type": "label",
                      "class": "row_bold",
                      "text": "{{name}}"
                    },
                    {
                      "type": "label",
                      "class": "row_normal",
                      "text": "{{classes}} classes"
                    },
                    {
                      "type": "button",
                      "class": "btn_main button_ok",
                      "text": "{{price_formatted}}",
                      "action": {
                        "type": "$set",
                        "options": {
                          "selected_item": "{{name}}",
                          "selected_price": "{{price_formatted}}",
                          "selected_type": "membership",
                          "selected_id": "{{id}}"
                        },
                        "success": {
                          "trigger": "agree",
                          "options": {
                            "selected_agreement": "{{agreement}}"
                          }
                        }
                      }
                    }
                  ]
                }
              }
            },
            {
              "items": [
                {
                  "type": "label",
                  "class": "label_header",
                  "text": "Class Cards"
                }
              ]
            },
            {
              "items": {
                "{{#each $jason.cards}}": {
                  "type": "horizontal",
                  "style": {
                    "distribution": "equalsize",
                    "align": "center",
                    "spacing": "15"
                  },
                  "components": [
                    {
                      "type": "label",
                      "class": "row_bold",
                      "text": "{{Name}}"
                    },
                    {
                      "type": "label",
                      "class": "row_normal",
                      "text": "{{Classes}} classes for {{Validity}}"
                    },
                    {
                      "type": "button",
                      "class": "btn_main button_ok",
                      "text": "{{Price}}",
                      "action": {
                        "type": "$set",
                        "options": {
                          "selected_item": "{{Name}}",
                          "selected_price": "{{Price}}",
                          "selected_type": "class_card",
                          "selected_id": "{{id}}"
                        },
                        "success": {
                          "trigger": "checkout"
                        }
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}
