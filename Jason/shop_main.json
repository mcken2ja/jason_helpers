{
  "$jason": {
    "head": {
      "title": "Shop Main",
      "description": "",
      "styles": {
          "@": "https://json.trufitportal.com/Jason/common_styles.json"
      },
      "actions": {
        "$pull": {
          "type": "$reload"
        },
        "$load": {
          "trigger": "fetch"
        },
        "fetch": {
          "type": "$network.request",
          "options": {
            "url": "https://www.trufitportal.com/{{$global.studio.key}}/api/shop_items.json?token={{$global.user.token}}"
          },
          "success": {
            "type": "$render"
          }
        },
        "agree": {
          "type": "$util.alert",
          "options": {
            "title": "Membership agreement",
            "description": "{{$jason.selected_agreement}}",
            "success": "I Agree",
            "cancel": "I Decline"
          },
          "success": {
            "trigger": "checkout"
          }
        },
        "checkout": {
          "type": "$href",
          "options": {
            "url": "https://json.trufitportal.com/Jason/checkout.json",
            "options": {
              "item": "{{$get.selected_item}}",
              "price": "{{$get.selected_price}}",
              "type": "{{$get.selected_type}}",
              "id": "{{$get.selected_id}}"
            }
          }
        }
      },
      "templates": {
        "body": {
            "background": "#333333",
          "header": {
            "title": "Shop",
            "style": {
                "background": "#222222",
                "color": "#ffffff"
            },
            "menu": {
                "text": "ï€“",
                "style": {
                    "font": "FontAwesome",
                    "size": "20",
                    "color": "#ffffff"
                },
                "href": {
                    "url": "https://json.trufitportal.com/Jason/user_settings.json",
                    "transition": "push"
                }
            }
          },
          "footer": {
            "@": "https://json.trufitportal.com/Jason/footer.json"
          },
          "sections": [
            {
              "items": [
                {
                  "type": "label",
                  "class": "label_header",
                  "text": "Memberships"
                }
              ]
            },
            {
              "items": {
                "{{#each $jason.memberships}}": {
                  "type": "horizontal",
                  "style": {
                    "distribution": "equalsize",
                    "align": "center",
                    "spacing": "15"
                  },
                  "components": [
                    {
                      "type": "label",
                      "class": "row_bold",
                      "text": "{{name}}"
                    },
                    {
                      "type": "label",
                      "class": "row_normal",
                      "text": "{{classes}} classes"
                    },
                    {
                      "type": "button",
                      "class": "btn_row button_ok",
                      "text": "{{price_formatted}}",
                      "action": {
                        "type": "$set",
                        "options": {
                          "selected_item": "{{name}}",
                          "selected_price": "{{price_formatted}}",
                          "selected_type": "membership",
                          "selected_id": "{{id}}"
                        },
                        "success": {
                          "trigger": "agree",
                          "options": {
                            "selected_agreement": "{{agreement}}"
                          }
                        }
                      }
                    }
                  ]
                }
              }
            },
            {
              "items": [
                {
                  "type": "label",
                  "class": "label_header",
                  "text": "Class Cards"
                }
              ]
            },
            {
              "items": {
                "{{#each $jason.cards}}": {
                  "type": "horizontal",
                  "style": {
                    "distribution": "equalsize",
                    "align": "center",
                    "spacing": "15"
                  },
                  "components": [
                    {
                      "type": "label",
                      "class": "row_bold",
                      "text": "{{Name}}"
                    },
                    {
                      "type": "label",
                      "class": "row_normal",
                      "text": "{{Classes}} classes for {{Validity}}"
                    },
                    {
                      "type": "button",
                      "class": "btn_row button_ok",
                      "text": "{{Price}}",
                      "action": {
                        "type": "$set",
                        "options": {
                          "selected_item": "{{Name}}",
                          "selected_price": "{{Price}}",
                          "selected_type": "class_card",
                          "selected_id": "{{id}}"
                        },
                        "success": {
                          "trigger": "checkout"
                        }
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}
