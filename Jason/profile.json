{
  "$jason": {
    "head": {
      "title": "Profile Page",
      "description": "",
      "styles": {
        "header": {
          "size": "25",
          "font": "HelveticaNeue-Bold",
          "background": "#2377d9",
          "color": "#ffffff",
          "align": "center"
        },
        "link": {
          "size": "18"
        }
      },
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "https://www.trufitportal.com/{{$global.location_key}}/api/contact.json"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "title": "Contact",
            "style": {
              "theme": "dark"
            },
            "menu": {
              "text": "Logout",
              "action": {
                "type": "$global.reset",
                "options": {
                  "items": [
                    "token"
                  ]
                },
                "success": {
                  "type": "$href",
                  "options": {
                    "url": "https://json.trufitportal.com/Jason/login.json",
                    "transition": "replace",
                    "preload": {
                      "background": "#ffffff",
                      "layers": [
                        {
                          "type": "image",
                          "url": "https://json.trufitportal.com/images/kettle_512.png",
                          "style": {
                            "width": "200",
                            "top": "50%-100",
                            "left": "50%-100"
                          }
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "footer": {
            "@": "https://json.trufitportal.com/Jason/footer.json"
          },
          "sections": [
            {
              "items": [
                {
                  "type": "label",
                  "class": "header",
                  "text": "Call us"
                },
                {
                  "type": "label",
                  "class": "link",
                  "text": "{{$jason.studio_phone}}",
                  "href": {
                    "url": "tel://{{$jason.studio_phone}}",
                    "view": "app"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": "40"
                  }
                },
                {
                  "type": "label",
                  "class": "header",
                  "text": "Message us"
                },
                {
                  "type": "label",
                  "class": "link",
                  "text": "{{$jason.studio_email}}",
                  "href": {
                    "url": "mailto:{{$jason.studio_email}}?subject=Question",
                    "view": "app"
                  }
                },
                {
                  "type": "space",
                  "style": {
                    "height": "40"
                  }
                },
                {
                  "type": "label",
                  "class": "header",
                  "text": "Visit us"
                },
                {
                  "type": "html",
                  "class": "link",
                  "text": "{{$jason.studio_address}}"
                },
                {
                  "type": "space",
                  "style": {
                    "height": "40"
                  }
                },
                {
                  "type": "label",
                  "class": "link",
                  "text": "TRUFITSTUDIO.COM",
                  "href": {
                    "url": "https://trufitstudio.com",
                    "view": "web"
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}
